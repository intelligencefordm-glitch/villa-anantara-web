{
  "compilerOptions": {
    /* ---------- TARGET + MODULE ---------- */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",

    /* ---------- JSX (Next.js required) ---------- */
    "jsx": "preserve",
    "allowJs": true,

    /* ---------- TYPE CHECKING ---------- */
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* ---------- INCREMENTAL BUILD ---------- */
    "incremental": true,

    /* ---------- ABSOLUTE ALIASES (FIX) ---------- */
    "baseUrl": ".",                   
    "paths": {
      "@/*": ["./*"]                 
    },

    /* ---------- NEXT.JS PLUGIN ---------- */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  /* ---------- FILES INCLUDED ---------- */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  /* ---------- EXCLUDED ---------- */
  "exclude": ["node_modules"]
}
